<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    
    <!-- FORM -->
    <record id="project_task_form2" model="ir.ui.view">
        <field name="name">project.task.form.2</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_form2"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet//field[@name='user_id']" position="after">
                <field name="lead_id"/>
            </xpath>
        </field>
    </record>

    <!-- TREE -->
    <record id="project_task_tree2" model="ir.ui.view">
        <field name="name">project.task.tree.2</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_tree2"/>
        <field name="arch" type="xml">
            <xpath expr="//tree//field[@name='user_id']" position="after">
                <field name="lead_id"/>
            </xpath>
        </field>
    </record>

    <!-- SEARCH -->
    <record id="view_task_search_form" model="ir.ui.view">
        <field name="name">Search</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_search_form"/>
        <field name="arch" type="xml">
            <field name="name" position="after">
                <field name="lead_id" string="Opportunity" filter_domain="[('lead_id','ilike', self)]"/>
            </field>
        </field>
    </record> 

    <!-- ACTION -->
    <record id="task_from_crm_opportunity" model="ir.actions.act_window">
        <field name="name">Task</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">project.task</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,kanban,calendar,pivot,graph,activity,form</field>
        <field name="domain"></field>
        <field name="context">{'search_default_lead_id':active_id}</field>
        <field name="search_view_id" ref="project.view_task_search_form"/>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Create a task related to this opportunity.
            </p>
            <p>
                You can find here all tasks related to your opportunity.
            </p>
        </field>
    </record>

</odoo>
