<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <!-- FORM - Opportunity -->
    <record id="crm_case_form_view_oppor" model="ir.ui.view">
        <field name="name">crm.lead.form</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.crm_case_form_view_oppor"/>
        <field name="arch" type="xml">
            <!-- Smart button - Tasks -->
            <xpath expr="//sheet/div[@name='button_box']" position="inside">
                <button class="oe_stat_button" type="action" id="crm_lead_button_task" 
                    name="%(task_from_crm_opportunity)d" icon="fa-tasks"
                    context="{'search_default_lead_id': [id], 'default_name': name, 'default_description': description}">
                    <field string="Tasks" name="taskcount" widget="statinfo"/>
                </button>
            </xpath>
        </field>
    </record>

</odoo>
