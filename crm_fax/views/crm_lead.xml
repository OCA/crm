<odoo>

    <record id="crm_lead_view_phone_second_form" model="ir.ui.view">
        <field name="name">view.CRM.lead.number.secondary.form</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.crm_lead_view_form" />
        <field name="arch" type="xml">
            <xpath
                expr="//group[@name='opportunity_partner']//field[@name='phone']/.."
                position="after"
            >
                <field name="fax" widget="fax" />
            </xpath>
            <xpath
                expr="//group[@name='lead_info']//field[@name='phone']/.."
                position="after"
            >
                <field name="fax" widget="fax" />
            </xpath>
        </field>
    </record>
</odoo>
