<odoo>
    <record model="ir.ui.view" id="crm_automated_activity_crm_stage_form">
        <field name="name">crm.automated.activity.crm.stage.form</field>
        <field name="model">crm.stage</field>
        <field name="inherit_id" ref="crm.crm_stage_form" />
        <field name="arch" type="xml">
            <xpath expr="//sheet/group" position="after">
                <group name="automated_activity">
                    <field name="create_automated_activity" />
                    <field
                        name="automated_activity_ids"
                        attrs="{'invisible': [('create_automated_activity','=',False)]}"
                    />
                </group>
            </xpath>
        </field>
    </record>
</odoo>
