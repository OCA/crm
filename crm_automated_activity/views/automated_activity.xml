<odoo>
    <record model="ir.ui.view" id="automated_activity_form">
        <field name="name">automated.activity.form</field>
        <field name="model">automated.activity</field>
        <field name="arch" type="xml">
            <form string="Automated Activity">
                <sheet>
                    <group>
                        <group>
                            <field name="crm_stage_id" invisible="1" />
                            <field name="apply_in" />
                            <field name="activity_type_id" />
                        </group>
                        <group>
                            <field name="days_deadline" />
                            <field name="summary" />
                        </group>
                    </group>
                    <group>
                        <field name="note" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record model="ir.ui.view" id="automated_activity_tree">
        <field name="name">automated.activity.tree</field>
        <field name="model">automated.activity</field>
        <field name="arch" type="xml">
            <tree>
                <field name="crm_stage_id" invisible="1" />
                <field name="apply_in" />
                <field name="activity_type_id" />
                <field name="days_deadline" />
                <field name="summary" />
            </tree>
        </field>
    </record>
</odoo>
