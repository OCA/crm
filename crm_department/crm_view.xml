<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Sales Team -->
    <record id="crm_team_form" model="ir.ui.view">
      <field name="name">crm.team.form</field>
      <field name="model">crm.team</field>
      <field name="inherit_id" ref="sales_team.crm_team_view_form" />
      <field name="arch" type="xml">

        <field name="user_id" position="after">
          <field name="department_id" widget="selection"/>
        </field>

      </field>
    </record>

    <record id="crm_team_view_tree" model="ir.ui.view">
      <field name="name">crm.team.tree</field>
      <field name="model">crm.team</field>
      <field name="inherit_id" ref="sales_team.crm_team_view_tree" />
      <field name="arch" type="xml">

        <field name="user_id" position="after">
          <field name="department_id" widget="selection"/>
        </field>

      </field>
    </record>

    <!-- CRM Leads / "Your Pipeline" -->
    <record id="crm_case_form_view_leads" model="ir.ui.view" >
      <field name="name">CRM - Leads Form</field>
      <field name="model">crm.lead</field>
      <field name="inherit_id" ref="crm.crm_case_form_view_leads" />
      <field name="arch" type="xml">

        <field name="team_id" position="after">
          <field name="department_id" widget="selection"/>
        </field>

      </field>
    </record>

    <record id="crm_lead_view_tree_activity" model="ir.ui.view">
      <field name="name">Leads</field>
      <field name="model">crm.lead</field>
      <field name="inherit_id" ref="crm.crm_lead_view_tree_activity" />
      <field name="arch" type="xml">

        <field name="date_deadline" position="after">
          <field name="department_id"/>
        </field>

      </field>
    </record>

    <record id="view_crm_case_opportunities_filterv" model="ir.ui.view">
      <field name="name">CRM - Leads Search</field>
      <field name="model">crm.lead</field>
      <field name="inherit_id" ref="crm.view_crm_case_opportunities_filter" />
      <field name="arch" type="xml">

        <field name="team_id" position="after">
          <field name="department_id"/>
        </field>
        <xpath expr="/search/group" position="inside">
          <filter string="Department" domain="[]" context="{'group_by':'department_id'}"/>
        </xpath>

      </field>
    </record>

</odoo>
