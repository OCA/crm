<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_mailchimp_list_model_tree" model="ir.ui.view">
        <field name="model">mailchimp.list.model</field>
        <field name="arch" type="xml">
            <tree create="false" delete="false">
                <field name="name" readonly="True" />
                <field name="list_id" readonly="True" />
            </tree>
        </field>
    </record>
    <record id="view_mailchimp_list_model_form" model="ir.ui.view">
        <field name="model">mailchimp.list.model</field>
        <field name="arch" type="xml">
            <form>
                <field name="name" />
                <field name="list_id" />
                <field name="model" />
                <field name="change_trigger_fields" />
                <label for="merge_field_ids" />
                <field name="merge_field_ids">
                    <tree create="false" delete="false" editable="top">
                        <field name="name" readonly="True" />
                        <field name="tag" readonly="True" />
                        <field name="code" />
                    </tree>
                </field>
            </form>
        </field>
    </record>
</odoo>
