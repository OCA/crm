<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_mailchimp_settings_form" model="ir.ui.view">
        <field name="model">mailchimp.settings</field>
        <field name="arch" type="xml">
            <form string="General Settings" class="oe_form_configuration">
                <header>
                    <button string="Apply" type="object" name="execute" class="oe_highlight"/>
                    <button string="Cancel" type="object" name="cancel" class="oe_link" special="cancel"/>
                </header>
                <group name="general" string="General">
                    <field name="username" />
                    <field name="apikey" />
                    <field name="webhook_url" />
                </group>
            </form>
        </field>
    </record>
</odoo>
