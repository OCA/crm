<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_mailchimp_list_tree" model="ir.ui.view">
        <field name="model">mailchimp.list</field>
        <field name="arch" type="xml">
            <tree create="false" delete="false">
                <field name="name" readonly="True" />
            </tree>
        </field>
    </record>
    <record id="action_mailchimp_list_subscribers" model="ir.actions.act_window">
        <field name="name">Mailchimp mailinglist subscribers</field>
        <field name="res_model">mailchimp.subscriber</field>
        <field name="domain">[('list_id', '=', active_id)]</field>
    </record>
    <record id="view_mailchimp_list_form" model="ir.ui.view">
        <field name="model">mailchimp.list</field>
        <field name="arch" type="xml">
            <form create="false" delete="false">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button
                            name="%(action_mailchimp_list_subscribers)d"
                            type="action"
                            class="oe_stat_button"
                            icon="fa-users"
                        >
                            <div class="o_stat_info">Subscribers</div>
                        </button>
                        <button
                            name="action_update"
                            type="object"
                            class="oe_stat_button"
                            icon="fa-repeat"
                        >
                            <div class="o_stat_info">Update</div>
                        </button>
                        <button
                            name="action_push"
                            type="object"
                            class="oe_stat_button"
                            icon="fa-share"
                        >
                            <div class="o_stat_info">Push</div>
                        </button>
                    </div>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only" />
                        <h1>
                            <field name="name" readonly="True" />
                        </h1>
                    </div>
                    <group>
                        <field name="active" />
                        <field name="group_ids" widget="many2many_tags" />
                    </group>
                    <label for="model_ids" />
                    <field name="model_ids" />
                    <label for="interest_category_ids" />
                    <field name="interest_category_ids">
                        <tree create="false" delete="false">
                            <field name="name" readonly="True" />
                        </tree>
                    </field>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
