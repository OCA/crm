<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>

    <record model="ir.ui.view" id="crm_case_substage_tree">
        <field name="name">CRM case substage tree view</field>
        <field name="model">crm.case.substage</field>
        <field name="arch" type="xml">
            <tree name="CRM case substages" editable="top">
                <field name="name"/>
                <field name="stage_id"/>
            </tree>
        </field>
    </record>

    <record id="crm_case_substage_action" model="ir.actions.act_window">
        <field name="name">Substages</field>
        <field name="res_model">crm.case.substage</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree</field>
        <field name="help" type="html">
          <p class="oe_view_nocontent_create">
            Click to set a new substage in your lead/opportunity pipeline.
          </p><p>
            Substages will allow salespersons to easily refine the part or the
            reason why a lead or opportunity is positioned in that stage.
          </p>
        </field>
    </record>

    <menuitem action="crm_case_substage_action"
              id="menu_crm_case_substage"
              sequence="1"
              parent="base.menu_crm_config_lead"
    />

    </data>
</openerp>
